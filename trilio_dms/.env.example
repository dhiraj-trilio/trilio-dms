# Trilio DMS Configuration
# Copy this file to .env and update with your values

# Database Configuration (Client only)
DMS_DB_URL=mysql+pymysql://dms_user:dms_password@localhost:3306/trilio_dms

# RabbitMQ Configuration (Both client and server)
DMS_RABBITMQ_URL=amqp://dms_user:dms_password@localhost:5672

# Keystone Configuration (Server only)
DMS_AUTH_URL=http://keystone:5000/v3
KEYSTONE_TOKEN=your-keystone-token-here

# Node Configuration (Server only)
DMS_NODE_ID=compute-01

# Mount Configuration (Server only)
DMS_MOUNT_BASE=/var/lib/trilio/mounts

# Request Timeout (Client only, in seconds)
DMS_REQUEST_TIMEOUT=300

# Logging
DMS_LOG_LEVEL=INFO

# Testing
TEST_DB_URL=sqlite:///test_dms.db
TEST_RABBITMQ_URL=amqp://guest:guest@localhost:5672
RUN_INTEGRATION_TESTS=0
